#include <stdio.h>

int main() {
    int dia;

    for (;;) {
//Definir variavel
    printf("\nDigite um número de 1 a 7:");
    scanf("%d", &dia);
//Processamento
        if (dia <= 7) {
        switch (dia) {
case 1:
    printf("\n   Domingo\n");
break;
case 2:
    printf("\n   Segunda-Feira\n");
break;
case 3:
    printf("\n   Terça-Feira\n");
break;
case 4:
    printf("\n   Quarta-Feira\n");
break;
case 5:
    printf("\n   Quinta-Feira\n");
break;
 case 6:
    printf("\n   Sexta-Feira\n");
break;
case 7:
    printf("\n   Sábado\n");
break;
    }
        }else{
    printf("\n   Número NÃO cadastrado!\n");
        }
}
    return 0;
}
