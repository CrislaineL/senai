#include <stdio.h>


int main()
{
    int valores[5];
   int i, soma=0;

    for(i = 0 ; i <5; i++){
        printf("Digite o %d valor inteiro:", i + 1) ;
        scanf("%d", &valores[i]);
        soma+= valores[i];
    
        
    }

    float media =(float)soma /5;
        printf("a media dos valores inteiros Ã©: %2f\n", media);
        
        printf("valores maiores que a media:\n ");
        for(i = 0; i < 5; i++){
        if(valores[i] > media );{
        
    printf(" %d", valores[i]);
        }
 }

   printf("\n");
   
   printf("valores menores que a media:\n ");
   for(i = 0; i < 5;  i++){
       if(valores[i] < media){
       printf(" %d", valores[i]);
       
   }
   }

    printf("\n");
return 0;
}
